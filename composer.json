{
  "name": "igorsiqueira/task_manager",
  "description": "Sistema de Gerenciamento de Tarefas",
  "type": "project",
  "require": {
    "php": ">=8.2",
    "envms/fluentpdo": "^2.2",
    "catfan/medoo": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75"
  }
}
